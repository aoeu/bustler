<LinearLayout xmlns:_="http://schemas.android.com/apk/res/android"
              _:layout_width="match_parent"
              _:layout_height="match_parent"
              _:orientation="horizontal"
              _:weightSum="100"
              >

  <ListView
    _:id="@+id/allApps"
    _:layout_width="@dimen/mandatoryWidthForWeightedLayouts"
    _:layout_height="wrap_content"
    _:layout_weight="46"
    />

  <View
    _:layout_width="@dimen/mandatoryWidthForWeightedLayouts"
    _:layout_height="wrap_content"
    _:layout_weight="20"/>

  <ListView
    _:id="@+id/prioritizedApps"
    _:layout_width="@dimen/mandatoryWidthForWeightedLayouts"
    _:layout_height="wrap_content"
    _:layout_gravity="center_vertical"
    _:layout_weight="34"
    />

</LinearLayout>
